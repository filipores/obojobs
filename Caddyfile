# Caddyfile - Reverse Proxy + Static File Server
# Caddy automatically obtains and renews SSL certificates via Let's Encrypt

{$DOMAIN} {
    # API Proxy - route /api/* to backend (must be before catch-all)
    handle /api/* {
        reverse_proxy backend:5002
    }

    # Frontend - serve Vue.js SPA directly from built files
    handle {
        root * /srv/frontend

        # Cache hashed assets aggressively (Vite adds content hashes)
        @hashed path *.js *.css *.woff *.woff2 *.ttf *.eot
        header @hashed Cache-Control "public, max-age=31536000, immutable"

        # Cache images/icons for 7 days
        @images path *.png *.jpg *.jpeg *.gif *.ico *.svg *.webp
        header @images Cache-Control "public, max-age=604800"

        # SPA fallback - serve index.html for client-side routes
        try_files {path} /index.html
        file_server
    }

    # Security Headers
    header {
        # Prevent MIME type sniffing
        X-Content-Type-Options nosniff
        # Prevent clickjacking
        X-Frame-Options DENY
        # Control referrer information
        Referrer-Policy strict-origin-when-cross-origin
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Remove server header
        -Server
    }

    # Enable compression
    encode gzip zstd

    # Logging
    log {
        output stdout
        format console
    }
}

# Redirect www to non-www
www.{$DOMAIN} {
    redir https://{$DOMAIN}{uri} permanent
}
