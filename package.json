{
  "devDependencies": {
    "playwright": "^1.57.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,vue}": [
      "npm run lint:fix --prefix frontend"
    ],
    "backend/**/*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  }
}
