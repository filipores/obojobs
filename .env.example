# ============================================================
# obojobs - Single .env file (project root)
# ============================================================
# Copy this file to .env and fill in your values.
# Both backend and frontend read from this file.

# Anthropic API Key (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Security Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key
FLASK_ENV=development

# Domain (REQUIRED for production)
DOMAIN=yourdomain.com

# Database (default: SQLite, use PostgreSQL in production)
DATABASE_URL=sqlite:///obojobs.db
DB_PASSWORD=change-me-in-production

# File Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# CORS
CORS_ORIGINS=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google OAuth (required for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (SMTP) — Dev: Mailpit on localhost:1025, Prod: Gmail/SES
# Run `make mailpit` to start local mail server with Web-UI at http://localhost:8025
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@obojobs.local

# Email encryption (required for storing OAuth email tokens)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
EMAIL_ENCRYPTION_KEY=generate-a-fernet-key

# PayPal (optional)
# PAYPAL_CLIENT_ID=
# PAYPAL_CLIENT_SECRET=
# PAYPAL_MODE=sandbox

# ScraperAPI (optional, free tier: 1000 req/month — https://scraperapi.com)
# SCRAPER_API_KEY=your-scraperapi-key

# Security (enable in production)
FORCE_HTTPS=true
SECURITY_HEADERS_ENABLED=true

# Legal / Impressum
COMPANY_NAME=obo - Filip Ores
COMPANY_ADDRESS=Teststraße 1
COMPANY_POSTAL_CODE=80331
COMPANY_CITY=München
COMPANY_EMAIL=kontakt@obojobs.de
COMPANY_PHONE=

# Frontend (Vite - prefix with VITE_)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
VITE_API_URL=http://localhost:5002
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

