{
  "manifest_version": 3,
  "name": "obo Application Generator",
  "version": "2.0.0",
  "description": "Generate job applications from job postings",
  "permissions": ["contextMenus", "activeTab", "notifications", "storage"],
  "host_permissions": ["<all_urls>"],
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
